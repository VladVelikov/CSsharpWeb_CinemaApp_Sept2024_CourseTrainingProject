@using CinemaApp.Data.Models;
@model Movie

<h2 style="margin-left: 5em; margin-bottom:1em; text-decoration: underline;">@Model.Title</h2>

<div style="display: flex">
    <div>
        <p><strong>Genre:</strong> @Model.Genre</p>
        <p><strong>Release Date:</strong> @Model.ReleaseDate.ToString("MMMM yyyy")</p>
        <p><strong>Duration:</strong> @Model.Duration minutes</p>
        <p><strong>Director:</strong> @Model.Director</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <a asp-action="Index" class="btn btn-primary">Back to All Movies</a>
    </div>
    <div style= "margin-left: 2em;">
        <img style="max-width: 200px; height: auto; margin: 0 auto; border: 2px solid black; 
                    border-radius: 1em; padding: 1em; background-color:lightgray; box-shadow: 0px 0px 22px grey inset" 
        src="@Model.ImageUrl" alt="NoImageForThisMovie"/>
    </div>
</div>

